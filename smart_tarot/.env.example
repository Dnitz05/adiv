# Smart Divination - Environment Configuration Template
# Copy this file to .env and fill in your actual API keys and configuration

# =============================================================================
# API KEYS (REQUIRED for production builds)
# =============================================================================

# Random.org API Key for cryptographic randomness
# Get from: https://api.random.org/json-rpc/4/signing
RANDOM_ORG_API_KEY=your_random_org_api_key_here

# DeepSeek API Key for AI interpretations  
# Get from: https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# Base URL for the Vercel serverless backend
API_BASE_URL=https://smart-divination.vercel.app

# Alternative backend URLs for different environments
# API_BASE_URL=https://smart-divination-staging.vercel.app  # Staging
# API_BASE_URL=http://localhost:3000                        # Local development

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Enable Firebase Analytics (true/false)
ENABLE_ANALYTICS=false

# Enable Firebase Crashlytics (true/false)
ENABLE_CRASHLYTICS=false

# Enable debug logging in production (true/false)
DEBUG_LOGGING=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable in-app purchases (true/false)
ENABLE_IN_APP_PURCHASES=true

# Enable push notifications (true/false)
ENABLE_PUSH_NOTIFICATIONS=false

# Enable offline mode (true/false)
ENABLE_OFFLINE_MODE=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Build environment (development/staging/production)
BUILD_ENV=production

# Mock API responses for testing (true/false)
MOCK_API_RESPONSES=false

# Skip API key validation for development (true/false)
SKIP_API_KEY_VALIDATION=false

# =============================================================================
# RATE LIMITING
# =============================================================================

# Maximum free sessions per week
FREE_SESSIONS_PER_WEEK=7

# Maximum history retention for free users (days)
FREE_HISTORY_RETENTION_DAYS=7

# =============================================================================
# SECURITY
# =============================================================================

# Enable API request signing (true/false)
ENABLE_API_SIGNING=true

# API request timeout in seconds
API_TIMEOUT_SECONDS=30

# Maximum retry attempts for failed requests
MAX_RETRY_ATTEMPTS=3

# =============================================================================
# LOCALIZATION
# =============================================================================

# Default app locale (en/es/ca)
DEFAULT_LOCALE=en

# Fallback locale for missing translations (en/es/ca)
FALLBACK_LOCALE=en

# =============================================================================
# APP STORE CONFIGURATION
# =============================================================================

# App version for all platforms
APP_VERSION=1.0.0

# Build number (auto-incremented in CI/CD)
BUILD_NUMBER=1

# Content rating (4+/9+/12+/17+)
CONTENT_RATING=12+

# App category (Lifestyle/Entertainment/Utilities)
APP_CATEGORY=Lifestyle

# =============================================================================
# MONETIZATION
# =============================================================================

# Premium monthly price (in cents, e.g., 599 = $5.99)
PREMIUM_MONTHLY_PRICE=599

# Premium annual price (in cents, e.g., 4999 = $49.99)  
PREMIUM_ANNUAL_PRICE=4999

# Free trial duration (in days)
FREE_TRIAL_DAYS=7

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit the actual .env file to version control
# 2. Each developer should have their own .env file with their own API keys
# 3. Production builds require valid RANDOM_ORG_API_KEY and DEEPSEEK_API_KEY
# 4. Staging builds can use test API keys or mock responses
# 5. Development builds can skip API key validation for faster iteration

# =============================================================================
# SECURITY WARNING
# =============================================================================

# IMPORTANT: Keep your API keys secure!
# - Never share API keys in public repositories
# - Use environment-specific API keys (dev/staging/prod)
# - Rotate API keys regularly
# - Monitor API usage for suspicious activity
# - Enable API rate limiting and usage alerts