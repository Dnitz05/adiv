{
  "name": "smart-divination-backend",
  "version": "1.0.0",
  "description": "Canonical Next.js serverless backend for Smart Divination (Vercel + Supabase)",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "start": "next start -p 3001",
    "deploy": "vercel --prod",
    "deploy:staging": "vercel",
    "lint": "eslint pages/api --ext .ts,.js",
    "lint:fix": "eslint pages/api --ext .ts,.js --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "gen:db:types:dburl": "supabase gen types typescript --db-url \"$SUPABASE_DB_URL\" --schema public > lib/types/generated/supabase.ts",
    "gen:db:types:proj": "supabase gen types typescript --project-id \"$SUPABASE_PROJECT_ID\" --schema public > lib/types/generated/supabase.ts",
    "gen:db:types": "npm run gen:db:types:dburl",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:reset": "supabase db reset --linked",
    "supabase:db:push": "bash ../../scripts/supabase/db_push.sh",
    "supabase:types:ci": "bash ../../scripts/supabase/generate_types.sh"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "@vercel/edge": "^1.1.1",
    "bcryptjs": "^2.4.3",
    "google-auth-library": "^9.14.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.4",
    "next": "^14.0.0",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/react": "19.1.12",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vercel/node": "^3.0.11",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.2.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2",
    "vercel": "^32.7.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": ["ts-jest", {
        "diagnostics": false,
        "tsconfig": "./tsconfig.json"
      }]
    },
    "roots": [
      "<rootDir>/__tests__"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "pages/api/**/*.ts",
      "!pages/api/**/*.d.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/explicit-function-return-type": "warn",
      "@typescript-eslint/no-explicit-any": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "endOfLine": "auto"
  }
}
