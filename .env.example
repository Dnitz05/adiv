# =====================================================================
# Environment Variables - Smart Divination Platform
# Copy this file to .env.local and fill in your actual values
# =====================================================================

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Supabase project URL (from your Supabase dashboard)
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase anon key (public, safe for client-side use)
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase service role key (secret, server-side only)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# AI INTEGRATION (DEEPSEEK V3)
# =============================================================================

# DeepSeek API key for AI interpretations
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# =============================================================================
# RANDOMNESS PROVIDERS
# =============================================================================

# Random.org API key for cryptographic randomness (optional)
RANDOM_ORG_API_KEY=your_random_org_api_key_here

# =============================================================================
# AUTHENTICATION PROVIDERS
# =============================================================================

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Apple OAuth (optional)
APPLE_CLIENT_ID=your_apple_client_id_here
APPLE_CLIENT_SECRET=your_apple_client_secret_here

# =============================================================================
# NEXTJS CONFIGURATION
# =============================================================================

# Next.js environment
NODE_ENV=development

# App URLs (for different techniques)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_TAROT_URL=https://smart-tarot.vercel.app
NEXT_PUBLIC_ICHING_URL=https://smart-iching.vercel.app
NEXT_PUBLIC_RUNES_URL=https://smart-runes.vercel.app

# =============================================================================
# MONITORING & ANALYTICS (optional)
# =============================================================================

# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Vercel Analytics
VERCEL_ANALYTICS_ID=your_vercel_analytics_id_here

# PostHog for user analytics
POSTHOG_KEY=your_posthog_key_here
POSTHOG_HOST=your_posthog_host_here

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Local development flags
DEVELOPMENT_MODE=true
SKIP_AUTH_CHECKS=false
LOG_LEVEL=info

# =============================================================================
# SECURITY
# =============================================================================

# JWT secret for session signing (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your_nextauth_secret_here

# CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://*.vercel.app

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Vercel deployment settings
VERCEL_ENV=development
VERCEL_URL=
VERCEL_GIT_COMMIT_SHA=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_AI_INTERPRETATIONS=true
ENABLE_PREMIUM_FEATURES=true
ENABLE_SOCIAL_AUTH=true
ENABLE_SESSION_HISTORY=true
ENABLE_ANALYTICS=false

# Rate limiting
MAX_SESSIONS_PER_DAY_FREE=10
MAX_SESSIONS_PER_DAY_PREMIUM=100
MAX_AI_INTERPRETATIONS_PER_DAY_FREE=5
MAX_AI_INTERPRETATIONS_PER_DAY_PREMIUM=50